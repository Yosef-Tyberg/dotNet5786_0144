<Window x:Class="PL.Delivery.DeliveryAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Assign Delivery" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding Legend}" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- Courier List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding CourierList}" SelectedItem="{Binding SelectedCourier}"
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  MouseDoubleClick="Courier_MouseDoubleClick"
                  Visibility="{Binding CourierListVisibility}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding DeliveryType}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Order List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding OrderList}" SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  MouseDoubleClick="Order_MouseDoubleClick"
                  Visibility="{Binding OrderListVisibility}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerFullName}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding OrderType}" Width="Auto"/>
                <DataGridTextColumn Header="Time" Binding="{Binding OrderOpenTime}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>