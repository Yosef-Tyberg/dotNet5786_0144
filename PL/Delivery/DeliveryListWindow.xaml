<!-- Generated by Gemini. Prompt is in the Readme under Stage 5 -->
<Window x:Class="PL.Delivery.DeliveryListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Delivery"
        xmlns:pl="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Delivery List" Height="640" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <!-- Window Resources: Collections for ComboBoxes -->
    <Window.Resources>
        <pl:ScheduleStatusCollection x:Key="ScheduleStatusCollection"/>
        <pl:DeliveryEndTypesCollection x:Key="DeliveryEndTypesCollection"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Section (Row 0): Filters for Schedule Status and End Type -->
        <Grid HorizontalAlignment="Stretch" Height="Auto" Grid.Row="0" 
              VerticalAlignment="Stretch" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Schedule Status Filter -->
            <Label Grid.Column="0" Content="Schedule Status:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding Source={StaticResource ScheduleStatusCollection}}"
                      SelectedValue="{Binding StatusFilter, Mode=TwoWay}"
                      SelectionChanged="cbFilter_SelectionChanged"
                      Width="150" Margin="5"/>

            <!-- End Type Filter -->
            <Label Grid.Column="2" Content="End Type:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox Grid.Column="3" 
                      ItemsSource="{Binding Source={StaticResource DeliveryEndTypesCollection}}"
                      SelectedValue="{Binding EndTypeFilter, Mode=TwoWay}"
                      SelectionChanged="cbFilter_SelectionChanged"
                      Width="150" Margin="5"/>
        </Grid>
        
        <!-- DataGrid Section (Row 1): Displays the list of deliveries -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding DeliveryList}" SelectedItem="{Binding SelectedDelivery}" 
                  MouseDoubleClick="DataGrid_MouseDoubleClick" AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9" HeadersVisibility="Column"
                  BorderThickness="0" Margin="10">
            <!-- DataGrid Resources: Styles for cells and headers -->
            <DataGrid.Resources>
                <DataTemplate x:Key="SortableHeaderTemplate">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}"/>
                        <TextBlock Text="⇅" Margin="5,0,0,0" Foreground="#888" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
                <Style x:Key="CenterAligned" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="ToolTip" Value="Click to Sort"/>
                    <Setter Property="ContentTemplate" Value="{StaticResource SortableHeaderTemplate}"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>
            <!-- Columns Definition -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Courier ID" Binding="{Binding CourierId}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding DeliveryStartTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding DeliveryEndTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Schedule" Binding="{Binding ScheduleStatus}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="End Type" Binding="{Binding DeliveryEndType}" Width="120" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Cancel" Padding="5,0" Command="{Binding DataContext.CancelSingleCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Action Buttons (Row 2) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Assign Delivery" Height="50" Width="120" Click="BtnAdd_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
