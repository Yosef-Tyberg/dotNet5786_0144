<!-- Generated by Gemini. Prompt is in the Readme under Stage 5 -->
<Window x:Class="PL.Delivery.DeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Delivery"
        xmlns:controls="clr-namespace:PL.Controls"
        xmlns:pl="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Delivery Details" Width="450" SizeToContent="Height"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <pl:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
        <pl:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#555"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/> <!-- Button -->
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding CurrentDelivery.Id, StringFormat='Delivery #{0}'}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <!-- General Info -->
            <!-- GroupBox creates a bordered area with a header -->
            <GroupBox Header="General Information" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Order ID:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.OrderId}" Style="{StaticResource ValueStyle}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Courier ID:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.CourierId}" Style="{StaticResource ValueStyle}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Transport:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.DeliveryType}" Style="{StaticResource ValueStyle}" Grid.Row="2" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <!-- Status & Timeline -->
            <GroupBox Header="Status &amp; Timeline" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Schedule:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.ScheduleStatus}" Style="{StaticResource ValueStyle}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Start Time:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.DeliveryStartTime, Converter={StaticResource DateTimeToStringConverter}}" Style="{StaticResource ValueStyle}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Expected:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.ExpectedDeliveryTime, Converter={StaticResource DateTimeToStringConverter}}" Style="{StaticResource ValueStyle}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Max Time:" Style="{StaticResource LabelStyle}" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.MaximumDeliveryTime, Converter={StaticResource DateTimeToStringConverter}}" Style="{StaticResource ValueStyle}" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="End Time:" Style="{StaticResource LabelStyle}" Grid.Row="4" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.DeliveryEndTime, Converter={StaticResource DateTimeToStringConverter}, TargetNullValue='In Progress'}" Style="{StaticResource ValueStyle}" Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Outcome:" Style="{StaticResource LabelStyle}" Grid.Row="5" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.DeliveryEndType, TargetNullValue='--'}" Style="{StaticResource ValueStyle}" Grid.Row="5" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <!-- Performance -->
            <GroupBox Header="Performance Metrics" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Distance:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                    <!-- StringFormat allows formatting the bound value (e.g., adding " km" suffix) -->
                    <TextBlock Text="{Binding CurrentDelivery.ActualDistance, StringFormat='{}{0} km', TargetNullValue='--'}" Style="{StaticResource ValueStyle}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Duration:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0"/>
                    <controls:TimeSpanEditor Value="{Binding CurrentDelivery.DeliveryDuration}" IsReadOnly="True" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <TextBlock Text="Avg Speed:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding CurrentDelivery.AverageSpeed, StringFormat='{}{0} km/h'}" Style="{StaticResource ValueStyle}" Grid.Row="2" Grid.Column="1"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <Button Grid.Row="2" Content="Close" Click="BtnClose_Click" HorizontalAlignment="Center" Padding="30,8" Margin="0,10,0,0"/>
    </Grid>
</Window>