<!-- Generated by Gemini. Prompt is in the Readme under Stage 5 -->
<Window x:Class="PL.Courier.CourierListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Courier"
        xmlns:pl="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Courier List" Height="640" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <!-- DataContext=Self means this XAML file looks for properties in its own code-behind file (.xaml.cs) -->

    <!-- Resources: Definitions available to the entire window (Styles, Templates, Converters) -->
    <Window.Resources>
        <!-- Collection for Filter ComboBox, defined in PL/Enums.cs or similar -->
        <pl:DeliveryTypesCollection x:Key="DeliveryTypesCollection"/>
        <DataTemplate x:Key="SortableHeaderTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding}"/>
                <TextBlock Text="⇅" Margin="5,0,0,0" Foreground="#888" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <!-- Style for centering content inside columns -->
        <Style x:Key="CenterAligned" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <!-- Style for centering DataGrid cell content -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
        </Style>
        <!-- Style for centering DataGrid column headers -->
        <Style TargetType="DataGridColumnHeader">
            <!-- Setters apply properties to all elements of TargetType in scope -->
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="ToolTip" Value="Click to Sort"/>
            <Setter Property="ContentTemplate" Value="{StaticResource SortableHeaderTemplate}"/>
        </Style>
    </Window.Resources>
    <!-- Main Layout Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Filter Section (Row 0): Allows filtering couriers by Delivery Type -->
        <Grid HorizontalAlignment="Stretch" Height="Auto" Grid.Row="0" 
              VerticalAlignment="Stretch" Width="Auto"> <!-- Grid layout allows precise positioning in rows and columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="Select Delivery Type:" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="10,0,0,0"/>
            <!-- Binding Source to StaticResource loads the enum values -->
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding Source={StaticResource DeliveryTypesCollection}}"
                      SelectedValue="{Binding StatusFilter, Mode=TwoWay}"
                      SelectionChanged="cbStatusSelector_SelectionChanged"
                      VerticalAlignment="Stretch" 
                      HorizontalAlignment="Stretch"/>
        </Grid>
        
        <!-- DataGrid Section (Row 1): Displays the list of couriers -->
        <!-- ItemsSource binds to the 'CourierList' property in code-behind -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding CourierList}" SelectedItem="{Binding SelectedCourier}" 
                  MouseDoubleClick="DataGrid_MouseDoubleClick" AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9" HeadersVisibility="Column"
                  BorderThickness="0" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding DeliveryType}" Width="Auto" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="In Delivery" Binding="{Binding IsInDelivery}" Width="Auto"/>
                <!-- TemplateColumn allows custom content like Buttons inside a cell -->
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Padding="5,0" Command="{Binding DataContext.DeleteSingleCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Id}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons (Row 2) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add Courier" Height="50" Width="120" Click="BtnAdd_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
