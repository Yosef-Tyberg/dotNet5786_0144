<!-- Generated by Gemini. Prompt is in the Readme under Stage 5 -->
<Window x:Class="PL.Delivery.DeliveryAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:pl="clr-namespace:PL"
        Title="Assign Delivery" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Window.Resources>
        <pl:MaxDeliveryTimeConverter x:Key="MaxDeliveryTimeConverter"/>
        <DataTemplate x:Key="SortableHeaderTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding}"/>
                <TextBlock Text="â‡…" Margin="5,0,0,0" Foreground="#888" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="CenterAligned" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="ToolTip" Value="Click to Sort"/>
            <Setter Property="ContentTemplate" Value="{StaticResource SortableHeaderTemplate}"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding Legend}" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- Courier List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding CourierList}" SelectedItem="{Binding SelectedCourier}"
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  MouseDoubleClick="Courier_MouseDoubleClick"
                  Visibility="{Binding CourierListVisibility}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding DeliveryType}" Width="Auto" ElementStyle="{StaticResource CenterAligned}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Order List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding OrderList}" SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  MouseDoubleClick="Order_MouseDoubleClick"
                  Visibility="{Binding OrderListVisibility}"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEE"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9" HeadersVisibility="Column"
                  BorderThickness="0" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding OrderType}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerFullName}" Width="*"/>
                <DataGridTextColumn Header="Max Time" Binding="{Binding OrderOpenTime, Converter={StaticResource MaxDeliveryTimeConverter}}" Width="140" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding OrderStatus}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
                <DataGridTextColumn Header="Schedule" Binding="{Binding ScheduleStatus}" Width="100" ElementStyle="{StaticResource CenterAligned}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>