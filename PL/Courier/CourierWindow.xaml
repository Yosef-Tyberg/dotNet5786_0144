<!-- Generated by Gemini. Prompt is in the Readme under Stage 5 -->
<Window x:Class="PL.Courier.CourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Courier"
        xmlns:pl="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Courier Window" Height="550" Width="450"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <!-- DataContext set to Self allows binding to DependencyProperties in code-behind -->

    <Window.Resources>
        <!-- Converters and Collections for data binding -->
        <pl:IdToReadOnlyConverter x:Key="IdToReadOnlyConverter"/>
        <pl:IdToVisibilityConverter x:Key="IdToVisibilityConverter"/>
        <pl:DeliveryTypesList x:Key="DeliveryTypesList"/>
        <pl:NullableDoubleConverter x:Key="NullableDoubleConverter"/>
        <pl:StringToIntConverter x:Key="StringToIntConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Style for TextBoxes to indicate ReadOnly state visually -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3"/>
            <!-- Triggers allow changing properties based on conditions (e.g., if IsReadOnly is True) -->
            <Style.Triggers>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#EEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style for DatePicker to indicate Disabled state visually -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="3"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#EEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Row definitions: Main form area and Button area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Form Grid -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ID Field: ReadOnly in Update mode, Editable in Add mode -->
            <Label Grid.Row="0" Grid.Column="0" Content="ID:" Margin="3"/>
            <!-- Binding Mode=TwoWay allows changes in UI to update Code, and vice-versa -->
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding CurrentCourier.Id, Mode=TwoWay, Converter={StaticResource StringToIntConverter}}"
                     IsReadOnly="{Binding IsIdReadOnly}"/>

            <!-- Basic Information Fields -->
            <Label Grid.Row="1" Grid.Column="0" Content="Full Name:" Margin="3"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentCourier.FullName, Mode=TwoWay}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Phone:" Margin="3"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentCourier.MobilePhone, Mode=TwoWay}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Email:" Margin="3"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentCourier.Email, Mode=TwoWay}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Password:" Margin="3"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CurrentCourier.Password, Mode=TwoWay}"/>
            
            <!-- Delivery Type Selection -->
            <Label Grid.Row="5" Grid.Column="0" Content="Delivery Type:" Margin="3"/>
            <ComboBox Grid.Row="5" Grid.Column="1" Margin="3" 
                      ItemsSource="{Binding Source={StaticResource DeliveryTypesList}}"
                      SelectedValue="{Binding CurrentCourier.DeliveryType, Mode=TwoWay}"/>
            
            <!-- Operational Parameters -->
            <Label Grid.Row="6" Grid.Column="0" Content="Max Distance (km):" Margin="3"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CurrentCourier.PersonalMaxDeliveryDistance, Converter={StaticResource NullableDoubleConverter}, Mode=TwoWay}"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Active:" Margin="3"/>
            <CheckBox Grid.Row="7" Grid.Column="1" Margin="3" VerticalAlignment="Center" IsChecked="{Binding CurrentCourier.Active, Mode=TwoWay}"/>

            <!-- Employment Data (ReadOnly/Calculated) -->
            <!-- Visibility Binding: Uses BooleanToVisibilityConverter to hide fields if IsIdReadOnly is false (Add Mode) -->
            <Label Grid.Row="8" Grid.Column="0" Content="Start Date:" Margin="3" Visibility="{Binding IsIdReadOnly, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <DatePicker Grid.Row="8" Grid.Column="1" SelectedDate="{Binding CurrentCourier.EmploymentStartTime, Mode=OneWay}" IsEnabled="False" Visibility="{Binding IsIdReadOnly, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Label Grid.Row="9" Grid.Column="0" Content="Years Employed:" Margin="3" Visibility="{Binding IsIdReadOnly, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding CurrentCourier.YearsEmployed}" IsReadOnly="True" Visibility="{Binding IsIdReadOnly, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>

        <!-- Action Button (Add or Update) -->
        <!-- Button text binds to 'ButtonText' property to dynamically show "Add" or "Update" -->
        <Button Grid.Row="1" Content="{Binding ButtonText}" Margin="10" Padding="10,5" Click="BtnAddUpdate_Click"/>
    </Grid>
</Window>
